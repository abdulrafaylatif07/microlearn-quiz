<div class="max-w-md mx-auto mt-20 p-6 bg-white rounded-2xl shadow-md">
  <h2 class="text-2xl font-semibold mb-6 text-gray-800">Register</h2>

  <%= form_with model: @user, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :name, "Name", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :name, class: "mt-1 w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-indigo-300" %>
    </div>

    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-indigo-300" %>
    </div>

    <div>
      <%= f.label :password, "Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password, class: "mt-1 w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-indigo-300" %>
    </div>

    <div>
      <%= f.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-gray-700" %>
      <%= f.password_field :password_confirmation, class: "mt-1 w-full px-3 py-2 border rounded-md shadow-sm focus:outline-none focus:ring focus:ring-indigo-300" %>
    </div>

    <%= f.submit "Sign up", class: "w-full bg-green-600 text-white py-2 px-4 rounded-md hover:bg-green-700 transition" %>
  <% end %>
</div>
