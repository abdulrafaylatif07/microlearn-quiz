<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-6 py-8">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-8 py-6">
        <div class="flex items-center justify-between">
          <div>
            <h1 class="text-3xl font-bold text-gray-900 mb-2">Edit Quiz</h1>
            <p class="text-gray-600">Make changes to your quiz content and settings</p>
          </div>
          
          <!-- Quiz Info Badge -->
          <div class="flex items-center space-x-2">
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15.232 5.232l3.536 3.536m-2.036-5.036a2.5 2.5 0 113.536 3.536L6.5 21.036H3v-3.572L16.732 3.732z"></path>
              </svg>
              Editing Mode
            </span>
          </div>
        </div>
      </div>
    </div>

    <!-- Main Edit Form -->
    <%= form_with model: @quiz, class: "space-y-8" do |f| %>
      <!-- Quiz Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-8 py-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6 flex items-center">
            <svg class="w-5 h-5 mr-2 text-blue-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            Quiz Details
          </h2>
          
          <div class="grid grid-cols-1 gap-6">
            <div>
              <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :title, 
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900",
                  placeholder: "Enter quiz title..." %>
            </div>

            <div>
              <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :description, 
                  rows: 3,
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 resize-none",
                  placeholder: "Describe your quiz..." %>
            </div>
          </div>
        </div>
      </div>

      <!-- Questions Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-8 py-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900 flex items-center">
              <svg class="w-5 h-5 mr-2 text-purple-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Questions & Answers
            </h2>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-purple-100 text-purple-800">
              <%= pluralize(@quiz.questions.size, 'Question') %>
            </span>
          </div>

          <div class="space-y-8">
            <%= f.fields_for :questions do |qf| %>
              <div class="border border-gray-200 rounded-lg p-6 bg-gradient-to-r from-gray-50 to-blue-50">
                <!-- Question Header -->
                <div class="flex items-center mb-6">
                  <div class="flex-shrink-0 w-10 h-10 bg-gradient-to-r from-blue-600 to-purple-600 text-white rounded-full flex items-center justify-center text-lg font-bold">
                    <%= qf.index + 1 %>
                  </div>
                  <h3 class="ml-3 text-lg font-semibold text-gray-900">Question <%= qf.index + 1 %></h3>
                  
                  <!-- Status Indicator -->
                  <div class="ml-auto">
                    <% if qf.object.content.present? %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-green-100 text-green-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                        </svg>
                        Complete
                      </span>
                    <% else %>
                      <span class="inline-flex items-center px-2 py-1 rounded-full text-xs font-medium bg-yellow-100 text-yellow-800">
                        <svg class="w-3 h-3 mr-1" fill="currentColor" viewBox="0 0 20 20">
                          <path fill-rule="evenodd" d="M8.257 3.099c.765-1.36 2.722-1.36 3.486 0l5.58 9.92c.75 1.334-.213 2.98-1.742 2.98H4.42c-1.53 0-2.493-1.646-1.743-2.98l5.58-9.92zM11 13a1 1 0 11-2 0 1 1 0 012 0zm-1-8a1 1 0 00-1 1v3a1 1 0 002 0V6a1 1 0 00-1-1z" clip-rule="evenodd"></path>
                        </svg>
                        Incomplete
                      </span>
                    <% end %>
                  </div>
                </div>

                <!-- Question Content -->
                <div class="mb-6">
                  <%= qf.label :content, "Question Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= qf.text_field :content, 
                      class: "block w-full px-4 py-3 border border-gray-300 rounded-lg shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 bg-white text-lg",
                      placeholder: "Enter your question..." %>
                </div>

                <!-- Options Section -->
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-4 flex items-center">
                    <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    Answer Options
                    <span class="ml-2 text-xs text-gray-500">(Check the correct answer)</span>
                  </h4>
                  
                  <div class="space-y-3">
                    <%= qf.fields_for :options do |of| %>
                      <div class="flex items-center space-x-3 bg-white border-2 border-gray-200 rounded-lg p-4 hover:border-blue-300 transition-colors duration-200">
                        <!-- Option Letter -->
                        <div class="flex-shrink-0 w-8 h-8 bg-gray-100 text-gray-700 rounded-full flex items-center justify-center text-sm font-bold">
                          <%= (65 + of.index).chr %>
                        </div>
                        
                        <!-- Option Input -->
                        <div class="flex-1">
                          <%= of.text_field :content, 
                              class: "block w-full px-3 py-2 border-0 focus:ring-0 text-gray-900 placeholder-gray-500 text-lg",
                              placeholder: "Enter option #{(65 + of.index).chr}..." %>
                        </div>
                        
                        <!-- Correct Answer Toggle -->
                        <div class="flex items-center bg-gray-50 rounded-lg px-3 py-2">
                          <%= of.check_box :correct, 
                              class: "w-5 h-5 text-green-600 bg-white border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
                          <%= of.label :correct, "Correct", 
                              class: "ml-2 text-sm font-medium text-gray-700 cursor-pointer select-none" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Helper Text -->
                  <div class="mt-3 p-3 bg-blue-50 rounded-lg">
                    <p class="text-xs text-blue-700 flex items-center">
                      <svg class="w-4 h-4 mr-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                      </svg>
                      Make sure to check at least one correct answer for each question. You can have multiple correct answers if needed.
                    </p>
                  </div>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Save Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-8 py-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-semibold text-gray-900 flex items-center">
                <svg class="w-5 h-5 mr-2 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                </svg>
                Save Changes
              </h3>
              <p class="text-sm text-gray-600 mt-1">Review your changes and update the quiz when ready.</p>
            </div>
            
            <div class="flex items-center space-x-4"> 
              <%= f.submit "Update Quiz",
                   class: "inline-flex items-center px-8 py-3 bg-yellow-500 text-white font-semibold rounded-lg hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-400 focus:ring-offset-2 transition-all duration-200 shadow-md hover:shadow-lg" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>

    <!-- Bottom Navigation -->
    <div class="mt-8 flex items-center justify-center">
      <%= link_to quiz_path(@quiz), 
          class: "inline-flex items-center px-4 py-2 text-gray-600 hover:text-gray-800 transition-colors duration-200" do %>
        <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
        </svg>
        Back to Quiz View
      <% end %>
    </div>
  </div>
</div>