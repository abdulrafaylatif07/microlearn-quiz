<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-6 py-8">
    <!-- Quiz Header -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-8 py-8">
        <div class="flex items-start justify-between mb-4">
          <div class="flex-1">
            <h1 class="text-3xl font-bold text-gray-900 mb-3"><%= @quiz.title %></h1>
            <p class="text-lg text-gray-600 leading-relaxed">
              <%= @quiz.description.present? ? @quiz.description : "No description provided" %>
            </p>
          </div>
          
          <!-- Quiz Stats -->
          <div class="ml-6 flex flex-col space-y-2">
            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= pluralize(@quiz.questions.count, 'Question') %>
            </div>
            <div class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-green-100 text-green-800">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              Created <%= @quiz.created_at&.strftime("%b %d, %Y") || "Unknown" %>
            </div>
          </div>
        </div>
        
        <!-- Action Buttons -->
        <div class="flex items-center space-x-3 pt-4 border-t border-gray-200">
          <%= link_to quizzes_path, 
              class: "inline-flex items-center px-4 py-2 bg-gray-100 text-gray-700 font-medium rounded-md hover:bg-gray-200 focus:outline-none focus:ring-2 focus:ring-gray-500 focus:ring-offset-2 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to My Quizzes
          <% end %>
          
          <%= link_to edit_quiz_path(@quiz), 
              class: "inline-flex items-center px-4 py-2 bg-yellow-500 text-white font-medium rounded-md hover:bg-yellow-600 focus:outline-none focus:ring-2 focus:ring-yellow-500 focus:ring-offset-2 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Quiz
          <% end %>
          
          <%= button_to quiz_path(@quiz), method: :delete,
              data: { confirm: "Are you sure you want to delete this quiz? This action cannot be undone." },
              class: "inline-flex items-center px-4 py-2 bg-red-600 text-white font-medium rounded-md hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 focus:ring-offset-2 transition-colors duration-200" do %>
            <svg class="w-4 h-4 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
            </svg>
            Delete Quiz
          <% end %>
        </div>
      </div>
    </div>

    <!-- Questions Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200">
      <div class="px-8 py-6">
        <div class="flex items-center justify-between mb-6">
          <h2 class="text-2xl font-semibold text-gray-900">Quiz Questions</h2>
          <span class="text-sm text-gray-500">Review all questions and answers</span>
        </div>

        <div class="space-y-8">
          <% @quiz.questions.each_with_index do |question, index| %>
            <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
              <!-- Question Header -->
              <div class="flex items-start mb-6">
                <div class="flex-shrink-0 w-10 h-10 bg-blue-600 text-white rounded-full flex items-center justify-center text-lg font-bold">
                  <%= index + 1 %>
                </div>
                <div class="ml-4 flex-1">
                  <h3 class="text-xl font-semibold text-gray-900 leading-tight">
                    <%= question.content %>
                  </h3>
                </div>
              </div>

              <!-- Answer Options -->
              <div class="ml-14">
                <h4 class="text-sm font-medium text-gray-700 mb-4 flex items-center">
                  <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                  </svg>
                  Answer Options
                </h4>
                
                <div class="space-y-3">
                  <% question.options.each_with_index do |option, option_index| %>
                    <div class="flex items-center p-3 rounded-lg <%= option.correct ? 'bg-green-50 border-2 border-green-200' : 'bg-white border border-gray-300' %>">
                      <!-- Option Letter -->
                      <div class="flex-shrink-0 w-8 h-8 <%= option.correct ? 'bg-green-100 text-green-700' : 'bg-gray-100 text-gray-600' %> rounded-full flex items-center justify-center text-sm font-semibold">
                        <%= (65 + option_index).chr %>
                      </div>
                      
                      <!-- Option Content -->
                      <div class="ml-3 flex-1">
                        <span class="text-gray-900 font-medium"><%= option.content %></span>
                      </div>
                      
                      <!-- Correct Answer Indicator -->
                      <% if option.correct %>
                        <div class="flex items-center ml-3">
                          <svg class="w-5 h-5 text-green-600 mr-2" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                          </svg>
                          <span class="text-green-700 font-semibold text-sm">Correct Answer</span>
                        </div>
                      <% end %>
                    </div>
                  <% end %>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>

    <!-- Bottom Actions -->
    <div class="mt-8 flex items-center justify-between">
      <div class="text-sm text-gray-500">
        <span class="flex items-center">
          <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
          </svg>
          Quiz ID: #<%= @quiz.id %>
        </span>
      </div>
      
      
    </div>
  </div>
</div>