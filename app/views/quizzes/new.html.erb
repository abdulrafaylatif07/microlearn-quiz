<div class="min-h-screen bg-gray-50">
  <div class="max-w-4xl mx-auto px-6 py-8">
    <!-- Header Section -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-8 py-6">
        <h1 class="text-3xl font-bold text-gray-900 mb-2">Create New Quiz</h1>
        <p class="text-gray-600">Build an engaging quiz for your audience</p>
      </div>
    </div>

    <!-- Question Count Selector -->
    <div class="bg-white rounded-lg shadow-sm border border-gray-200 mb-8">
      <div class="px-8 py-6">
        <h2 class="text-xl font-semibold text-gray-900 mb-4">Quiz Setup</h2>
        <%= form_tag new_quiz_path, method: :get, class: "flex items-end space-x-4" do %>
          <div class="flex-1">
            <label class="block text-sm font-medium text-gray-700 mb-2">How many questions?</label>
            <%= select_tag :question_count, 
                options_for_select((1..10).map {|i| [pluralize(i, 'question'), i]}, params[:question_count]), 
                { prompt: "Select number of questions...", 
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900" } %>
          </div>
          <%= submit_tag "Set Questions", 
              class: "inline-flex items-center px-6 py-2 bg-blue-600 text-white font-medium rounded-md hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
        <% end %>
      </div>
    </div>

    <!-- Main Quiz Form -->
    <%= form_with model: @quiz, class: "space-y-8" do |f| %>
      <!-- Quiz Details -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-8 py-6">
          <h2 class="text-xl font-semibold text-gray-900 mb-6">Quiz Details</h2>
          
          <div class="grid grid-cols-1 gap-6">
            <div>
              <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_field :title, 
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900",
                  placeholder: "Enter quiz title..." %>
            </div>

            <div>
              <%= f.label :description, class: "block text-sm font-medium text-gray-700 mb-2" %>
              <%= f.text_area :description, 
                  rows: 3,
                  class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 resize-none",
                  placeholder: "Describe your quiz..." %>
            </div>
          </div>
        </div>
      </div>

      <!-- Questions Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-8 py-6">
          <div class="flex items-center justify-between mb-6">
            <h2 class="text-xl font-semibold text-gray-900">Questions</h2>
            <span class="inline-flex items-center px-3 py-1 rounded-full text-sm font-medium bg-blue-100 text-blue-800">
              <svg class="w-4 h-4 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <%= @quiz.questions.size %> Questions
            </span>
          </div>

          <div class="space-y-8">
            <%= f.fields_for :questions do |qf| %>
              <div class="border border-gray-200 rounded-lg p-6 bg-gray-50">
                <!-- Question Header -->
                <div class="flex items-center mb-4">
                  <div class="flex-shrink-0 w-8 h-8 bg-blue-600 text-white rounded-full flex items-center justify-center text-sm font-semibold">
                    <%= qf.index + 1 %>
                  </div>
                  <h3 class="ml-3 text-lg font-medium text-gray-900">Question <%= qf.index + 1 %></h3>
                </div>

                <!-- Question Content -->
                <div class="mb-6">
                  <%= qf.label :content, "Question Text", class: "block text-sm font-medium text-gray-700 mb-2" %>
                  <%= qf.text_field :content, 
                      class: "block w-full px-3 py-2 border border-gray-300 rounded-md shadow-sm focus:outline-none focus:ring-2 focus:ring-blue-500 focus:border-blue-500 text-gray-900 bg-white",
                      placeholder: "Enter your question..." %>
                </div>

                <!-- Options Section -->
                <div>
                  <h4 class="text-sm font-medium text-gray-700 mb-4 flex items-center">
                    <svg class="w-4 h-4 mr-2 text-gray-500" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                    </svg>
                    Answer Options
                  </h4>
                  
                  <div class="space-y-3">
                    <%= qf.fields_for :options do |of| %>
                      <div class="flex items-center space-x-3 bg-white border border-gray-200 rounded-md p-3">
                        <!-- Option Letter -->
                        <div class="flex-shrink-0 w-6 h-6 bg-gray-100 text-gray-600 rounded-full flex items-center justify-center text-sm font-medium">
                          <%= (65 + of.index).chr %>
                        </div>
                        
                        <!-- Option Input -->
                        <div class="flex-1">
                          <%= of.text_field :content, 
                              class: "block w-full px-3 py-2 border-0 focus:ring-0 text-gray-900 placeholder-gray-500",
                              placeholder: "Enter option #{(65 + of.index).chr}..." %>
                        </div>
                        
                        <!-- Correct Answer Toggle -->
                        <div class="flex items-center">
                          <%= of.check_box :correct, 
                              class: "w-4 h-4 text-green-600 bg-gray-100 border-gray-300 rounded focus:ring-green-500 focus:ring-2" %>
                          <%= of.label :correct, "Correct", 
                              class: "ml-2 text-sm font-medium text-gray-700 cursor-pointer" %>
                        </div>
                      </div>
                    <% end %>
                  </div>
                  
                  <!-- Helper Text -->
                  <p class="mt-2 text-xs text-gray-500 flex items-center">
                    <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                    </svg>
                    Check the box next to the correct answer(s)
                  </p>
                </div>
              </div>
            <% end %>
          </div>
        </div>
      </div>

      <!-- Submit Section -->
      <div class="bg-white rounded-lg shadow-sm border border-gray-200">
        <div class="px-8 py-6">
          <div class="flex items-center justify-between">
            <div>
              <h3 class="text-lg font-medium text-gray-900">Ready to create your quiz?</h3>
              <p class="text-sm text-gray-600">Review your questions and click create when ready.</p>
            </div>
            
            <div class="flex items-center space-x-4">
              <%= link_to "Cancel", quizzes_path, 
                  class: "inline-flex items-center px-6 py-3 border border-gray-300 text-gray-700 font-medium rounded-md hover:bg-gray-50 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 transition-colors duration-200" %>
              
              <%= f.submit "Create Quiz", 
                  class: "inline-flex items-center px-8 py-3 bg-green-600 text-white font-semibold rounded-md hover:bg-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 focus:ring-offset-2 transition-colors duration-200 shadow-sm" %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>